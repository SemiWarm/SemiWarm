<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search_title"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_left_arrow"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_search_view"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_search_logo"/>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:background="@color/grey_400"/>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="190dp"
            android:layout_height="32dp"
            android:layout_marginStart="6dp"
            android:background="@null"
            android:hint="@string/hint_search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="@color/grey_400"
            android:textCursorDrawable="@drawable/bg_cursor_red"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_delete_logo"
            android:visibility="invisible"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_search"
        android:layout_marginEnd="10dp"/>

</LinearLayout>